{% extends 'template.html.twig' %}

{% block title %}Liste des personnes{% endblock %}

{% block body %}


<table class="table table-striped table-dark">
    <tr>
    <th><a href="{{ path('all_personne',{'sortby':'firstname'})}}"> Firstname</a></th>
    <th><a href="{{ path('all_personne',{'sortby':'name'})}}"> Name</a></th>
    <th><a href="{{ path('all_personne',{'sortby':'age'})}}"> Age</a></th>
    </tr>

    {% for personne in personnes %}
    <tr>
    <td>{{ personne.firstname }}</td>
    <td>{{ personne.name }}</td>
    <td>{{ personne.age }}</td>
    </tr>

    {% endfor %}

</table>


{% endblock %}
